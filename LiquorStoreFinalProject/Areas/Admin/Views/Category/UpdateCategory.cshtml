@using LiquorStoreFinalProject.Areas.Admin.ViewModels.Category;
@using LiquorStoreFinalProject.Areas.Admin.ViewModels.Product;
@model UpdateCategoryVM
@{
    ViewData["Title"] = "Edit";
}

<style>
    .images {
        position: relative;
    }

        .images:hover button {
            opacity: 1;
        }

        .images img {
            transition: all 0.5s;
        }

        .images:hover img {
            filter: brightness(50%)
        }

        .images button {
            position: absolute;
            left: 50px;
            top: 155px;
            opacity: 0;
            transition: all 0.5s;
        }

</style>

<div class="container my-5">
    <h1>Update Category</h1>

    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <input value="@Model.Name" name="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger d-block"></span>
        </div>

        <div class="form-group mt-3">
            <lable>Update image</lable>
            <input name="Image" type="file" class="form-control" />
        </div>
        <button type="submit" formmethod="post" class="btn btn-success btn-rounded btn-fw mt-3">Submit</button>
        <a href="/Admin/Category/Index" class="btn btn-primary btn-rounded btn-fw mt-3">Back</a>
    </form>
</div>

@section AdminScripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/admin/js/product.js"></script>
}
