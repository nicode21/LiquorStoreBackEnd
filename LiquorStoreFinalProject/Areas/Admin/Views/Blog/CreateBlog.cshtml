@using LiquorStoreFinalProject.Areas.Admin.ViewModels.Blog;
@model CreateBlogVM
@{
    ViewData["Title"] = "Create";
}



<div class="container my-5">
    <h1>Create Blog</h1>
    <form asp-controller="Blog" asp-action="CreateBlog" method="post" enctype="multipart/form-data">
        <div class="form-group mt-3">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" name="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" name="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="Image">Image</label>
            <input asp-for="Image" type="file" class="form-control" name="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </form>

</div>
