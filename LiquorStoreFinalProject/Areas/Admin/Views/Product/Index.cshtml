@using LiquorStoreFinalProject.ViewModels;
@model GetPaginatedProductVM;
@{
    ViewData["Title"] = "Index";
}

<div class="container my-3">
    <h2 class="text-center">Products</h2>
    <div class="create-btn ">
        <a href="@Url.Action("CreateProduct", "Product")" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Discount
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/@product.ImageURL" style="width:100px;height:150px" />
                        </td>
                        <td class="py-1">
                            @product.Name
                        </td>
                        <td class="py-1">
                            @product.Description
                        </td>
                        <td class="py-1">
                            @product.Price
                        </td>
                        <td class="py-1">
                            @product.DiscountName
                        </td>
                        <td class="py-1">
                            @product.CategoryName
                        </td>
                        <td>
                            <a href="@Url.Action("UpdateProduct", "Product", new { id = product.Id })" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <a href="@Url.Action("DeleteProduct", "Product", new { id = product.Id })" class="btn btn-danger btn-rounded btn-fw">Delete</a>
                        </td>
                    </tr>
                    
                }

            </tbody>
        </table>
        <div class="pagination d-flex justify-content-center mt-3">
            <nav aria-label="...">
                <ul class="pagination">
                   
                    @for (int i = 1; i <= Model.Pages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")">
                            <a class="page-link " href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>


